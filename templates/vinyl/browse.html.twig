{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1>Browse Vinyl Mixes</h1>

    <h2 class="mt-5 mb-4">Filter by Genre</h2>
    <ul class="genre-list ps-0 mt-2 mb-3">
        <li class="d-inline">
           
            <a class="btn btn-primary btn-sm" href={{ path('app_randomGenre', { slug: 'Pop' }) }}>pop</a>
        </li>
        <li class="d-inline">
            <a class="btn btn-primary btn-sm" href={{ path('app_randomGenre', { slug: 'Rock' }) }}>rock</a>
        </li>
        <li class="d-inline">
            <a class="btn btn-primary btn-sm" href={{ path('app_randomGenre', { slug: 'Heavy_Metal' }) }}>heavy Metal</a>
        </li>
        <li class="d-inline">
            <a class="btn btn-primary btn-sm" href={{ path('app_randomGenre', { slug: 'Zouk' }) }}>Zouk</a>
        </li>
    </ul>


    <div>
        <h2 class="mt-5">Mixes</h2>
        <div class="row">
            {% for element in mix %}
                <div class="col col-md-4">
                    <div class="mixed-vinyl-container p-3 text-center">
                            <a href={{ path('mix', { id: element.id}) }}>
                                <img src={{ element.getImageUrl(200) }} data-src="https://via.placeholder.com/200" alt="Square placeholder img">
                            </a>
                            <p class="mt-2"><strong>{{ element.title }}</strong></p>
                            <span>{{ element.trackCount }}</span> | <span>{{ element.genre }}</span> | <span> {{ element.createdAt|ago }} {{ element.getVotesString() }} </span>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
